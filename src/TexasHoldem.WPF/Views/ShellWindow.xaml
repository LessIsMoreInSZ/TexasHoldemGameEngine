    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1600"
    Height="1000"
    IgnoreTaskbarOnMaximize="True"
    UseNoneWindowStyle="True"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowTransitionsEnabled="False"
    mc:Ignorable="d">
    <mah:SplitView IsPaneOpen="{Binding ElementName=tg, Path=IsChecked, Mode=TwoWay}">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Loaded">
                <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <mah:SplitView.Pane>
            <ContentControl x:Name="left" />
        </mah:SplitView.Pane>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                Text="Texas Hold'em" />
            <DockPanel LastChildFill="False">
                <ToggleButton
                    Name="tg"
                    Width="40"
                    Height="40"
                    Margin="5"
                    BorderThickness="0"
                    Content="{iconPacks:Ionicons Kind=CogMD,
                                                 Width=20,
                                                 Height=20}"
                    Style="{StaticResource MahApps.Styles.ToggleButton.Circle}" />
                <Button
                    Command="{Binding ReturnCommand}"
                    Content="{iconPacks:FeatherIcons Kind=LogOut,
                                                     Width=20,
                                                     Height=20}"
                    DockPanel.Dock="Right"
                    Style="{StaticResource circleButton}" />
            </DockPanel>
            <ContentControl x:Name="mainRegion" Grid.Row="1" />
        </Grid>
    </mah:SplitView>

