<Window
    x:Class="TexasHoldem.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TexasHoldem.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.Triggers>
        <EventTrigger RoutedEvent="Button.Click" SourceName="playBt">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation
                        FillBehavior="Stop"
                        Storyboard.TargetName="card1"
                        Storyboard.TargetProperty="X"
                        From="8"
                        To="-94"
                        Duration="0:0:0.5" />
                    <DoubleAnimation
                        FillBehavior="Stop"
                        Storyboard.TargetName="card1"
                        Storyboard.TargetProperty="Y"
                        From="0"
                        To="206"
                        Duration="0:0:0.5" />
                    <DoubleAnimation
                        FillBehavior="Stop"
                        Storyboard.TargetName="card2"
                        Storyboard.TargetProperty="X"
                        From="26"
                        To="44"
                        Duration="0:0:0.5" />
                    <DoubleAnimation
                        FillBehavior="Stop"
                        Storyboard.TargetName="card2"
                        Storyboard.TargetProperty="Y"
                        From="0"
                        To="206"
                        Duration="0:0:0.5" />
                    <DoubleAnimation
                        FillBehavior="Stop"
                        Storyboard.TargetName="card3"
                        Storyboard.TargetProperty="X"
                        From="20"
                        To="116"
                        Duration="0:0:0.5" />
                    <DoubleAnimation
                        FillBehavior="Stop"
                        Storyboard.TargetName="card3"
                        Storyboard.TargetProperty="Y"
                        From="0"
                        To="206"
                        Duration="0:0:0.5" />
                    <DoubleAnimation
                        FillBehavior="Stop"
                        Storyboard.TargetName="card4"
                        Storyboard.TargetProperty="X"
                        From="16"
                        To="-24"
                        Duration="0:0:0.5" />
                    <DoubleAnimation
                        FillBehavior="Stop"
                        Storyboard.TargetName="card4"
                        Storyboard.TargetProperty="Y"
                        From="0"
                        To="206"
                        Duration="0:0:0.5" />
                    <DoubleAnimation
                        FillBehavior="Stop"
                        Storyboard.TargetName="card5"
                        Storyboard.TargetProperty="X"
                        From="38"
                        To="186"
                        Duration="0:0:0.5" />
                    <DoubleAnimation
                        FillBehavior="Stop"
                        Storyboard.TargetName="card5"
                        Storyboard.TargetProperty="Y"
                        From="0"
                        To="206"
                        Duration="0:0:0.5" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="80" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="PaleVioletRed" />
        </Style>
        <Style x:Key="DeckBorder" TargetType="Border">
            <Setter Property="Background" Value="WhiteSmoke" />
            <Setter Property="CornerRadius" Value="2" />
            <Setter Property="Height" Value="80" />
            <Setter Property="Width" Value="60" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="Assets/back.jpg" />
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <!--<ListBox
      Name="lb">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="13" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Border
            HorizontalAlignment="Left"
            BorderBrush="Black"
            BorderThickness="0.5">
            <DockPanel LastChildFill="False">
                <Button
                    Name="playBt"
                    Click="playBt_Click"
                    Content="Play"
                    DockPanel.Dock="Top" />
                <!--<Button Background="Red" Content="Quit" DockPanel.Dock="Bottom" />-->
            </DockPanel>
        </Border>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.Resources>
                <Style BasedOn="{StaticResource DeckBorder}" TargetType="Border" />
            </Grid.Resources>
            <Border />
            <Border>
                <Border.RenderTransform>
                    <TranslateTransform X="2" />
